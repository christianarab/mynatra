<%%= erb :header %>

<h1>Index of <%= @name_plural.capitalize %></h1>
    <%% @<%= @name_plural %>.each do |<%= @name_singular %>| %>
        <h3><a href="/<%= @name_plural %>/<%%= <%= @name_singular %>.id %>"><%%= <%= @name_singular %>.id %></a></h3>
        <ul>
        <% @attributes.each do |attribute| %>
        <% if attribute.is_a? Hash -%>
            <li><%= attribute.keys[0].to_s %>: <%%= <%= @name_singular %>.<%= attribute.keys[0].to_s %> %></li>
        <% else -%>
              <li><%= attribute %>: <%%= <%= @name_singular %>.<%= attribute %> %></li>
        <% end -%>
        </ul>
        <% end -%>
<%% end %>

<%%= erb :footer %>